@using System.Security.Claims
@inject ContosoExpense.Services.IUserRepository UserRepository
@inject ContosoExpense.Services.IAuthService AuthService
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contoso Expense</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .status-badge {
            font-size: 0.75rem;
        }
        .status-draft { background-color: #6c757d; }
        .status-submitted { background-color: #0d6efd; }
        .status-approved { background-color: #198754; }
        .status-rejected { background-color: #dc3545; }
        .status-paid { background-color: #20c997; }
        .toast-container {
            position: fixed;
            top: 70px;
            right: 20px;
            z-index: 1050;
        }
        .sidebar {
            min-height: calc(100vh - 56px);
        }
        .nav-link.active {
            font-weight: bold;
        }
        .category-icon {
            font-size: 1.2rem;
            margin-right: 0.5rem;
        }
        .kpi-card {
            border-left: 4px solid;
        }
        .kpi-submitted { border-left-color: #0d6efd; }
        .kpi-approved { border-left-color: #198754; }
        .kpi-rejected { border-left-color: #dc3545; }
        .kpi-pending { border-left-color: #ffc107; }
    </style>
</head>
<body>
    @{
        var currentUser = await AuthService.GetCurrentUserAsync();
        var allUsers = await UserRepository.GetAllAsync();
        var isManager = currentUser?.Role == UserRole.Manager;
    }

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-page="/Index">
                    <i class="bi bi-receipt me-2"></i>Contoso Expense
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Expenses/Index">
                                <i class="bi bi-list-ul me-1"></i>Expenses
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Dashboard/Index">
                                <i class="bi bi-graph-up me-1"></i>Dashboard
                            </a>
                        </li>
                        @if (isManager)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" 
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-gear me-1"></i>Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-page="/Admin/Categories">Categories</a></li>
                                    <li><a class="dropdown-item" asp-page="/Admin/Users">Users</a></li>
                                    <li><a class="dropdown-item" asp-page="/Admin/Settings">Settings</a></li>
                                    <li><a class="dropdown-item" asp-page="/Admin/Metrics">Metrics</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form method="post" asp-page="/Admin/Reset" class="px-3">
                                            <button type="submit" class="btn btn-outline-danger btn-sm w-100"
                                                    onclick="return confirm('Are you sure you want to reset all data?')">
                                                <i class="bi bi-arrow-counterclockwise me-1"></i>Reset Data
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <div class="d-flex align-items-center">
                        @if (currentUser != null)
                        {
                            <div class="dropdown">
                                <button class="btn btn-outline-light dropdown-toggle" type="button" id="userDropdown" 
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i>
                                    @currentUser.DisplayName
                                    @if (isManager)
                                    {
                                        <span class="badge bg-warning text-dark ms-1">Manager</span>
                                    }
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><h6 class="dropdown-header">Switch User</h6></li>
                                    @foreach (var user in allUsers)
                                    {
                                        <li>
                                            <form method="post" asp-page="/SwitchUser" asp-route-userId="@user.Id">
                                                <button type="submit" class="dropdown-item @(user.Id == currentUser.Id ? "active" : "")">
                                                    @user.DisplayName
                                                    @if (user.Role == UserRole.Manager)
                                                    {
                                                        <span class="badge bg-warning text-dark ms-1">M</span>
                                                    }
                                                </button>
                                            </form>
                                        </li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="py-4">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-3 mt-auto">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - Contoso Expense - Demo Application
        </div>
    </footer>

    <!-- Toast Container -->
    <div class="toast-container" id="toastContainer"></div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Toast notification function
        function showToast(message, type = 'success') {
            const toastContainer = document.getElementById('toastContainer');
            const toastId = 'toast-' + Date.now();
            const bgClass = type === 'success' ? 'bg-success' : type === 'error' ? 'bg-danger' : 'bg-info';
            
            const toastHtml = `
                <div id="${toastId}" class="toast ${bgClass} text-white" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-body d-flex justify-content-between align-items-center">
                        <span>${message}</span>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            `;
            
            toastContainer.insertAdjacentHTML('beforeend', toastHtml);
            const toastElement = document.getElementById(toastId);
            const toast = new bootstrap.Toast(toastElement, { delay: 3000 });
            toast.show();
            
            toastElement.addEventListener('hidden.bs.toast', () => toastElement.remove());
        }

        // Show toast from TempData
        @if (TempData["SuccessMessage"] != null)
        {
            <text>showToast('@TempData["SuccessMessage"]', 'success');</text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <text>showToast('@TempData["ErrorMessage"]', 'error');</text>
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
