@page
@model ContosoExpense.Pages.Admin.MetricsModel
@{
    ViewData["Title"] = "Metrics";
}

<h2><i class="bi bi-speedometer2 me-2"></i>System Metrics</h2>

<div class="row mt-4">
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-activity display-4 text-primary"></i>
                <h2 class="mt-3">@Model.Metrics.TotalOperations</h2>
                <p class="text-muted mb-0">Total Operations</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-clock display-4 text-info"></i>
                <h2 class="mt-3">@Model.AverageLatency.ToString("F1") ms</h2>
                <p class="text-muted mb-0">Average Latency</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-file-earmark-text display-4 text-success"></i>
                <h2 class="mt-3">@Model.RecentRequests.Count()</h2>
                <p class="text-muted mb-0">Recent Requests</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header">
                <i class="bi bi-bar-chart me-1"></i>Operations by Type
            </div>
            <div class="card-body">
                @if (Model.Metrics.OperationCounts.Any())
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Operation</th>
                                <th class="text-end">Count</th>
                                <th class="text-end">Avg Latency</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var op in Model.Metrics.OperationCounts.OrderByDescending(o => o.Value))
                            {
                                <tr>
                                    <td>@op.Key</td>
                                    <td class="text-end">@op.Value</td>
                                    <td class="text-end">
                                        @if (Model.Metrics.AverageLatencyMs.TryGetValue(op.Key, out var lat))
                                        {
                                            @($"{lat:F1} ms")
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">No operations recorded yet.</p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header">
                <i class="bi bi-clock-history me-1"></i>Recent Requests
            </div>
            <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                @if (Model.RecentRequests.Any())
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Time</th>
                                <th>Method</th>
                                <th>Path</th>
                                <th class="text-end">Duration</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var req in Model.RecentRequests.Take(50))
                            {
                                <tr>
                                    <td><small>@req.Timestamp.ToString("HH:mm:ss")</small></td>
                                    <td>
                                        <span class="badge @(req.Method == "GET" ? "bg-success" : req.Method == "POST" ? "bg-primary" : "bg-warning")">
                                            @req.Method
                                        </span>
                                    </td>
                                    <td><small>@req.Path</small></td>
                                    <td class="text-end">@req.ElapsedMs ms</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">No requests recorded yet.</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <form method="post" asp-page-handler="Clear" class="d-inline">
        <button type="submit" class="btn btn-outline-danger">
            <i class="bi bi-trash me-1"></i>Clear Metrics
        </button>
    </form>
    <a asp-page="Metrics" class="btn btn-outline-secondary ms-2">
        <i class="bi bi-arrow-clockwise me-1"></i>Refresh
    </a>
</div>
