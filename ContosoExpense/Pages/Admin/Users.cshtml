@page
@model ContosoExpense.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "User Management";
}

<h2><i class="bi bi-people me-2"></i>User Management</h2>

<div class="row mt-4">
    <div class="col-md-10">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Users</span>
                <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addUserModal">
                    <i class="bi bi-plus me-1"></i>Add User
                </button>
            </div>
            <div class="card-body">
                <table class="table" aria-label="Users list">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Department</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr class="@(user.IsActive ? "" : "table-secondary")">
                                <td>@user.DisplayName</td>
                                <td>@user.Username</td>
                                <td>@user.Email</td>
                                <td>@user.Department</td>
                                <td>
                                    <span class="badge @(user.Role == UserRole.Manager ? "bg-warning text-dark" : "bg-primary")">
                                        @user.Role
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @(user.IsActive ? "bg-success" : "bg-secondary")">
                                        @(user.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>
                                    @if (user.Role == UserRole.User)
                                    {
                                        <form method="post" asp-page-handler="PromoteToManager" asp-route-id="@user.Id" class="d-inline">
                                            <button type="submit" class="btn btn-outline-warning btn-sm" title="Promote to Manager">
                                                <i class="bi bi-arrow-up"></i>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form method="post" asp-page-handler="DemoteToUser" asp-route-id="@user.Id" class="d-inline">
                                            <button type="submit" class="btn btn-outline-secondary btn-sm" title="Demote to User">
                                                <i class="bi bi-arrow-down"></i>
                                            </button>
                                        </form>
                                    }
                                    @if (user.IsActive)
                                    {
                                        <form method="post" asp-page-handler="Deactivate" asp-route-id="@user.Id" class="d-inline">
                                            <button type="submit" class="btn btn-outline-danger btn-sm" title="Deactivate">
                                                <i class="bi bi-person-x"></i>
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form method="post" asp-page-handler="Activate" asp-route-id="@user.Id" class="d-inline">
                                            <button type="submit" class="btn btn-outline-success btn-sm" title="Activate">
                                                <i class="bi bi-person-check"></i>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Add User Modal -->
<div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Add">
                <div class="modal-header">
                    <h5 class="modal-title" id="addUserModalLabel">Add User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Username</label>
                        <input type="text" class="form-control" name="username" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Display Name</label>
                        <input type="text" class="form-control" name="displayName" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" name="email" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Department</label>
                        <input type="text" class="form-control" name="department" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Role</label>
                        <select class="form-select" name="role">
                            <option value="User">User</option>
                            <option value="Manager">Manager</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add User</button>
                </div>
            </form>
        </div>
    </div>
</div>
