@page "{id}"
@model ContosoExpense.Pages.Expenses.EditModel
@{
    ViewData["Title"] = "Edit Expense";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Expenses/Index">Expenses</a></li>
        <li class="breadcrumb-item"><a asp-page="/Expenses/Details" asp-route-id="@Model.Input.Id">@Model.Input.Title</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit</li>
    </ol>
</nav>

<h2><i class="bi bi-pencil me-2"></i>Edit Expense</h2>

<div class="row mt-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Input.Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.Title" class="form-label">Title <span class="text-danger">*</span></label>
                        <input asp-for="Input.Title" class="form-control" />
                        <span asp-validation-for="Input.Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Description" class="form-label">Description</label>
                        <textarea asp-for="Input.Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Amount" class="form-label">Amount <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Input.Amount" class="form-control" type="number" step="0.01" min="0.01" />
                            </div>
                            <span asp-validation-for="Input.Amount" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Currency" class="form-label">Currency <span class="text-danger">*</span></label>
                            <select asp-for="Input.Currency" class="form-select">
                                @foreach (var currency in Model.Input.AllowedCurrencies)
                                {
                                    <option value="@currency">@currency</option>
                                }
                            </select>
                            <span asp-validation-for="Input.Currency" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.CategoryId" class="form-label">Category <span class="text-danger">*</span></label>
                            <select asp-for="Input.CategoryId" class="form-select">
                                @foreach (var category in Model.Input.AvailableCategories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                            <span asp-validation-for="Input.CategoryId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.ExpenseDate" class="form-label">Expense Date <span class="text-danger">*</span></label>
                            <input asp-for="Input.ExpenseDate" class="form-control" type="date" />
                            <span asp-validation-for="Input.ExpenseDate" class="text-danger"></span>
                        </div>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between">
                        <a asp-page="/Expenses/Details" asp-route-id="@Model.Input.Id" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Cancel
                        </a>
                        <div>
                            <button type="submit" name="action" value="save" class="btn btn-primary">
                                <i class="bi bi-check-lg me-1"></i>Save Changes
                            </button>
                            <button type="submit" name="action" value="submit" class="btn btn-success">
                                <i class="bi bi-send me-1"></i>Save & Submit
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
