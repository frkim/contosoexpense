@page "{id}"
@model ContosoExpense.Pages.Expenses.DetailsModel
@{
    ViewData["Title"] = Model.Expense?.Title ?? "Expense Details";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Expenses/Index">Expenses</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Expense?.Title</li>
    </ol>
</nav>

@if (Model.Expense == null)
{
    <div class="alert alert-danger" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>Expense not found.
    </div>
}
else
{
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="@Model.Category?.Icon me-2"></i>@Model.Expense.Title
                    </h4>
                    <span class="badge status-@Model.Expense.Status.ToString().ToLower() fs-6">
                        @Model.Expense.Status
                    </span>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Amount</dt>
                        <dd class="col-sm-9 fs-4 text-primary">@Model.Expense.Amount.ToString("C") @Model.Expense.Currency</dd>

                        <dt class="col-sm-3">Category</dt>
                        <dd class="col-sm-9">
                            <i class="@Model.Category?.Icon me-1"></i>@Model.Category?.Name
                        </dd>

                        <dt class="col-sm-3">Expense Date</dt>
                        <dd class="col-sm-9">@Model.Expense.ExpenseDate.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Expense.Description) ? "No description" : Model.Expense.Description)</dd>

                        <dt class="col-sm-3">Submitted By</dt>
                        <dd class="col-sm-9">@Model.Owner?.DisplayName</dd>

                        <dt class="col-sm-3">Created</dt>
                        <dd class="col-sm-9">@Model.Expense.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</dd>

                        @if (Model.Expense.SubmittedAt.HasValue)
                        {
                            <dt class="col-sm-3">Submitted</dt>
                            <dd class="col-sm-9">@Model.Expense.SubmittedAt.Value.ToString("MMMM dd, yyyy HH:mm")</dd>
                        }

                        @if (Model.Expense.ApprovedAt.HasValue)
                        {
                            <dt class="col-sm-3">Approved</dt>
                            <dd class="col-sm-9">
                                @Model.Expense.ApprovedAt.Value.ToString("MMMM dd, yyyy HH:mm")
                                by @Model.ApprovedBy?.DisplayName
                            </dd>
                            @if (!string.IsNullOrEmpty(Model.Expense.ApprovalNotes))
                            {
                                <dt class="col-sm-3">Approval Notes</dt>
                                <dd class="col-sm-9">@Model.Expense.ApprovalNotes</dd>
                            }
                        }

                        @if (Model.Expense.RejectedAt.HasValue)
                        {
                            <dt class="col-sm-3">Rejected</dt>
                            <dd class="col-sm-9 text-danger">
                                @Model.Expense.RejectedAt.Value.ToString("MMMM dd, yyyy HH:mm")
                                by @Model.RejectedBy?.DisplayName
                            </dd>
                            <dt class="col-sm-3">Rejection Reason</dt>
                            <dd class="col-sm-9 text-danger">@Model.Expense.RejectionReason</dd>
                        }

                        @if (Model.Expense.PaidAt.HasValue)
                        {
                            <dt class="col-sm-3">Paid</dt>
                            <dd class="col-sm-9 text-success">
                                @Model.Expense.PaidAt.Value.ToString("MMMM dd, yyyy HH:mm")
                                by @Model.PaidBy?.DisplayName
                            </dd>
                        }
                    </dl>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a asp-page="/Expenses/Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Back to List
                        </a>
                        <div class="btn-group">
                            @if (Model.CanEdit)
                            {
                                <a asp-page="Edit" asp-route-id="@Model.Expense.Id" class="btn btn-outline-primary">
                                    <i class="bi bi-pencil me-1"></i>Edit
                                </a>
                            }
                            @if (Model.CanSubmit)
                            {
                                <form method="post" asp-page-handler="Submit" class="d-inline">
                                    <button type="submit" class="btn btn-success">
                                        <i class="bi bi-send me-1"></i>Submit for Approval
                                    </button>
                                </form>
                            }
                            @if (Model.CanApprove)
                            {
                                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#approveModal">
                                    <i class="bi bi-check-lg me-1"></i>Approve
                                </button>
                            }
                            @if (Model.CanReject)
                            {
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal">
                                    <i class="bi bi-x-lg me-1"></i>Reject
                                </button>
                            }
                            @if (Model.CanPay)
                            {
                                <form method="post" asp-page-handler="Pay" class="d-inline">
                                    <button type="submit" class="btn btn-info">
                                        <i class="bi bi-cash me-1"></i>Mark as Paid
                                    </button>
                                </form>
                            }
                            @if (Model.CanDelete)
                            {
                                <form method="post" asp-page-handler="Delete" class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to delete this expense?')">
                                    <button type="submit" class="btn btn-outline-danger">
                                        <i class="bi bi-trash me-1"></i>Delete
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Comments Section -->
            <div class="card mt-4">
                <div class="card-header">
                    <i class="bi bi-chat-dots me-1"></i>Comments
                </div>
                <div class="card-body">
                    @if (!Model.Comments.Any())
                    {
                        <p class="text-muted mb-0">No comments yet.</p>
                    }
                    else
                    {
                        @foreach (var comment in Model.Comments)
                        {
                            var commentUser = Model.CommentUsers.GetValueOrDefault(comment.UserId);
                            <div class="border-bottom pb-3 mb-3">
                                <div class="d-flex justify-content-between">
                                    <strong>@commentUser?.DisplayName</strong>
                                    <small class="text-muted">@comment.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
                                </div>
                                <p class="mb-0 mt-2">@comment.Text</p>
                            </div>
                        }
                    }
                    
                    <form method="post" asp-page-handler="AddComment" class="mt-3">
                        <div class="input-group">
                            <input type="text" class="form-control" name="commentText" placeholder="Add a comment..." 
                                   aria-label="Add a comment" />
                            <button type="submit" class="btn btn-outline-primary">
                                <i class="bi bi-send"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Audit Trail -->
            <div class="card">
                <div class="card-header">
                    <i class="bi bi-clock-history me-1"></i>Audit Trail
                </div>
                <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                    @if (!Model.AuditLogs.Any())
                    {
                        <p class="text-muted mb-0">No audit history.</p>
                    }
                    else
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var log in Model.AuditLogs)
                            {
                                var logUser = Model.AuditUsers.GetValueOrDefault(log.UserId);
                                <li class="mb-3">
                                    <div class="d-flex align-items-start">
                                        <span class="badge bg-secondary me-2">@log.Action</span>
                                        <div>
                                            <small class="text-muted d-block">
                                                @log.Timestamp.ToString("MMM dd, HH:mm") by @logUser?.DisplayName
                                            </small>
                                            @if (!string.IsNullOrEmpty(log.Details))
                                            {
                                                <small class="text-muted">@log.Details</small>
                                            }
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Approve Modal -->
    <div class="modal fade" id="approveModal" tabindex="-1" aria-labelledby="approveModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post" asp-page-handler="Approve">
                    <div class="modal-header">
                        <h5 class="modal-title" id="approveModalLabel">Approve Expense</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Approve <strong>@Model.Expense.Title</strong> for <strong>@Model.Expense.Amount.ToString("C")</strong>?</p>
                        <div class="mb-3">
                            <label for="approvalNotes" class="form-label">Notes (optional)</label>
                            <textarea class="form-control" id="approvalNotes" name="notes" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-lg me-1"></i>Approve
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Reject Modal -->
    <div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post" asp-page-handler="Reject">
                    <div class="modal-header">
                        <h5 class="modal-title" id="rejectModalLabel">Reject Expense</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Reject <strong>@Model.Expense.Title</strong>?</p>
                        <div class="mb-3">
                            <label for="rejectionReason" class="form-label">Reason <span class="text-danger">*</span></label>
                            <textarea class="form-control" id="rejectionReason" name="reason" rows="3" required></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-x-lg me-1"></i>Reject
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
